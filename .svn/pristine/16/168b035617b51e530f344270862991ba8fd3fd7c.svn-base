<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Application Upgrade"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In order to upgrade, please install the Secure Suite License Manager. This app may be uninstalled after acquiring your license."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/ssIcon"
        android:layout_width="172dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:onClick="onClickGooglePlay"
        android:src="@drawable/ss_large_icon" />

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="258dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:onClick="onClickGooglePlay"
        android:src="@drawable/google_play" />

</LinearLayout>
