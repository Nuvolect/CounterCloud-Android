<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/linen"
            android:padding="12dp"
            android:text="You can use the app free forever, however the the premium features will expire in 14 days. Save yourself the trouble and upgrade now.">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/premium_features_prelinks"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/linen"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="pre links placeholder" >
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cc_premium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/linen"
            android:padding="12dp"
            android:text="We will not pester you with this dialog again until 1 day before premium features expire. More information is available online." >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/premium_features_postlinks"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/linen"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="post links placeholder" >
        </TextView>


    </LinearLayout>
</ScrollView>
