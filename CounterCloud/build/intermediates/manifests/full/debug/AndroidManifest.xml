<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuvolect.countercloud.debug"
    android:versionCode="22201"
    android:versionName="2.2.2-debug" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.ACCESS_NETWORaK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <supports-screens
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nuvolect.countercloud.main.CloudMainActivity"
            android:label="CounterCloud"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nuvolect.countercloud.main.CloudManagerActivity"
            android:label="Cloud Manager"
            android:launchMode="singleTask"
            android:parentActivityName="com.nuvolect.countercloud.main.CloudMainActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.CloudMainActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.nuvolect.countercloud.files"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>

        <activity
            android:name="com.nuvolect.countercloud.main.EventLogActivity"
            android:label="Cloud Event Log"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.CloudMainActivity" />
        </activity>
        <activity
            android:name="com.nuvolect.countercloud.main.SettingsActivity"
            android:label="CounterCloud Settings"
            android:theme="@android:style/Theme.Holo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.CloudMainActivity" />
        </activity>
        <activity
            android:name="com.nuvolect.countercloud.survey.AppSurveyActivity"
            android:label="App Permission Survey"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.CloudMainActivity" />
        </activity>

        <service
            android:name="com.nuvolect.countercloud.main.WorkerService"
            android:label="CounterCloudMonitorService"
            android:parentActivityName="com.nuvolect.countercloud.CloudMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.CloudMainActivity" />
        </service>

        <receiver android:name="com.nuvolect.countercloud.alarm.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.nuvolect.countercloud.alarm.HeartbeatAlarmReceiver" >
        </receiver>

        <provider
            android:name="com.nuvolect.countercloud.data.DbProvider"
            android:authorities="com.nuvolect.countercloud"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>